<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotels in City"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="20dp" />

    <!-- Booking.com -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBookingCom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgBookingCom"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/booking_com"
                android:scaleType="centerCrop"
                android:contentDescription="Booking.com" />

            <TextView
                android:id="@+id/txtBookingCom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Hotels on Booking.com"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/Primary_key"
                android:paddingTop="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Agoda -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAgoda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgAgoda"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/agoda"
                android:scaleType="centerCrop"
                android:contentDescription="Agoda" />

            <TextView
                android:id="@+id/txtAgoda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Hotels on Agoda"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/Primary_key"
                android:paddingTop="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Google Hotels -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGoogleHotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgGoogleHotels"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/google_hotels"
                android:scaleType="centerCrop"
                android:contentDescription="Google Hotels" />

            <TextView
                android:id="@+id/txtGoogleHotels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Hotels on Google Hotels"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/Primary_key"
                android:paddingTop="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
